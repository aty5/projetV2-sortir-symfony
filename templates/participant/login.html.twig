{% extends 'base.html.twig' %}

{% block body %}
    <main class="login">
        <h2>Authentification</h2>
        <p class="subtitle">Veuillez vous authentifier pour accéder au site.</p>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('participant_login') }}" method="post">
            <div class="login-section">
                <label for="username">Email ou pseudo :</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}">
            </div>
            <div class="login-section">
                <label for="password">Mot de passe :</label>
                <input type="password" id="password" name="_password">

            </div>
            <input type="hidden" name="_target_path" value="sortie_liste">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="login-section">
                <button type="submit">login</button>
            </div>
            <div class="checkbox">
                <input type="checkbox" name="_remember_me" checked/>
                <label for="_remember_me">Se souvenir de moi</label>
            </div>
        </form>
        <div>
            <a href="{{ path('app_forgot_password_request') }}" title="reset password">Mot de passe oublié ?</a>
        </div>
    </main>

{% endblock %}
