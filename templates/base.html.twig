<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">

    {% if titre is not defined %}
        <title>Sortir.com</title>
    {% else %}
        <title>Sortir.com | {{ titre }}</title>
    {% endif %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{{ include( 'inc/nav.html.twig') }}
<ul class="flash" onclick="this.remove()">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <li class="flash-{{ label }}" onclick="this.remove()">{{ message }}</li>
        {% endfor %}
    {% endfor %}
</ul>
<div class="main">
    {% block body %}{% endblock %}
</div>
<footer class="le-footer">
    <div class="footer-content">&copy <a href="{{ path('main_home') }}">sortir.com</a> - La fine Ã©quipe</div>
</footer>
</body>
</html>
